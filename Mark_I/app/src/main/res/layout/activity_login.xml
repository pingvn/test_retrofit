<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="8dp">

        <FrameLayout
            android:layout_width="340dp"
            android:layout_height="190dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="65dp"
                android:layout_marginRight="110dp"
                android:text="@string/string_Text_Login" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginRight="110dp"
                android:text="@string/string_Text_Pass" />

            <EditText
                android:id="@+id/id_EditText_Login"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="70dp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/id_EditText_Pass"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp" />

            <Button
                android:id="@+id/id_Button_Enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:text="@string/string_Button_Enter" />

            <Button
                android:id="@+id/id_Button_ForgetPass"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="70dp"
                android:text="@string/string_Button_forgetPass" />


        </FrameLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>